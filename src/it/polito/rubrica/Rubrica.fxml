<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="290.0" prefWidth="371.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="it.polito.rubrica.RubricaController">
   <top>
      <HBox alignment="TOP_CENTER" prefHeight="48.0" prefWidth="371.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="RUBRICA" textFill="#e80606">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <GridPane alignment="CENTER" hgap="10.0" vgap="5.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Nome " />
            <Label text="Email" GridPane.rowIndex="1" />
            <TextField fx:id="textNome" GridPane.columnIndex="1" />
            <TextField fx:id="textEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="btnCerca" mnemonicParsing="false" onAction="#doCerca" text="Cerca" GridPane.columnIndex="2" />
            <Button fx:id="btnInsert" mnemonicParsing="false" onAction="#doInsert" text="Inserisci" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Telefono" GridPane.rowIndex="2" />
            <TextField fx:id="TextTelefono" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </center>
   <bottom>
      <HBox prefHeight="47.0" prefWidth="351.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="textResult" editable="false" prefHeight="79.0" prefWidth="351.0" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
